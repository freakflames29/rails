<h1 class="m-5">Change password for <%= Current.reg.email %></h1>

<% if flash[:alert] %>
	<div class="alert alert-warning alert-dismissible alert-danger fade show m-4" role="alert">
				<li style="color:red"> <%= flash[:alert] %> </li>
			 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
<% end %>


<% if Current.reg.errors.any? %>
	<% Current.reg.errors.full_messages.each do |msg| %>
		<div class="alert alert-warning alert-dismissible fade show m-4" role="alert">
				<li style="color:red"> <%= msg %> </li>
			 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	<% end %>
<% end %>

<%= form_with model:Current.reg ,url:edit_password_path do |f| %>
	<div class="m-3">
		<%= f.label :password,class:'form-label' %>
		<div class="col-sm-5">
		<%= f.password_field :password,class:'form-control' %>
		</div>
	</div>

	<div class="m-3">
		<%= f.label :password_confirmation,class:'form-label' %>
		<div class="col-sm-5">
		<%= f.password_field :password_confirmation,class:'form-control' %>
		</div>
	</div>



	<%= f.submit "Update Password" ,class:'btn btn-dark ms-3'%>


<% end %>
