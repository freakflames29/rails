<h1 class="m-3">Login</h1>

<% if notice %>
	<div class="alert alert-warning alert-dismissible alert-danger fade show m-4" role="alert">
			<%= notice %>
	 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
<% end %>

<% if flash[:succ] %>
	<div class="alert alert-success alert-dismissible  fade show m-4" role="alert">
			<%= flash[:succ] %>
	 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
<% end %>


<% if flash[:alert] %>
	<div class="alert alert-warning alert-dismissible alert-danger fade show m-4" role="alert">
	  	<%= flash[:alert] %>
	 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
	</div>
<% end %>
<%= form_with url:login_path do |f| %>

	<div class="m-3">
		<%=  f.label :email,class:'form-label' %>
		<div class="col-sm-5">
		<%= f.text_field :email,class:'form-control' %>
		</div>
	</div>

	<div class="m-3">
		<%=  f.label :password,class:'form-label' %>
		<div class="col-sm-5">
		<%=  f.password_field :password,class:'form-control' %>
		</div>
	<%= link_to "Forgot Password?",password_reset_path  %>
	</div>



	<%= f.submit "Login" ,class:'btn btn-outline-dark ms-3'%>


<% end %>
