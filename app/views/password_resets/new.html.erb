<h1 class="m-3">Password Reset</h1>
<% if flash[:alert] || notice %>
	 <div class="alert alert-warning alert-dismissible alert-danger fade show m-4" role="alert">
			<%= flash[:alert] %>
			<%= notice %>
	 <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
</div>

<% end %>

<%= form_with url:password_reset_path do |f| %>
	<div class="m-3">
		<%= f.label :email,class:'form-label' %>
		<div class="col-sm-5">
		<%= f.text_field :email,class:'form-control' %> 
		</div>
	</div>

	<%= f.submit "Reset password" ,class:'btn btn-dark ms-3'%>

<% end %>